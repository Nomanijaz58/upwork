# MongoDB Configuration (Required)
# URI should NOT include database name - compatible with MongoDB Compass
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=upwork_proposal_bot

# OpenAI Configuration (Optional - required for proposal generation)
# OPENAI_API_KEY=your_openai_api_key_here

# n8n Security (Optional - recommended for production)
# N8N_SHARED_SECRET=your_shared_secret_here

# Service Configuration (Optional)
SERVICE_NAME=upwork-proposal-bot
LOG_LEVEL=INFO
